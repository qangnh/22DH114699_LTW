@model List<_22DH114699_LTW.Models.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    var category = ViewBag.Category as _22DH114699_LTW.Models.Category;
    var categories = ViewBag.Categories as List<_22DH114699_LTW.Models.Category>;
    var minPrice = ViewBag.MinPrice as decimal?;
    var maxPrice = ViewBag.MaxPrice as decimal?;
    var searchTerm = ViewBag.SearchTerm as string;
    var sortOrder = ViewBag.SortOrder as string;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-light p-3 rounded">
            <li class="breadcrumb-item">@Html.ActionLink("Trang chủ", "Index", "Home")</li>
            @if (category != null)
            {
                <li class="breadcrumb-item active" aria-current="page">@category.CategoryName</li>
            }
            else
            {
                <li class="breadcrumb-item active" aria-current="page">Tất cả sản phẩm</li>
            }
        </ol>
    </nav>

    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-12">
            <h2 class="text-danger">
                <i class="bi bi-grid-3x3-gap"></i> 
                @if (category != null)
                {
                    @category.CategoryName
                }
                else
                {
                    <text>Tất cả sản phẩm</text>
                }
            </h2>
            <p class="text-muted">Tìm thấy @Model.Count sản phẩm</p>
        </div>
    </div>

    <div class="row">
        <!-- Sidebar - Categories Filter -->
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> Danh mục sản phẩm</h5>
                </div>
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("ProductList", "Home", new { minPrice = minPrice, maxPrice = maxPrice, searchTerm = searchTerm, sortOrder = sortOrder })" 
                       class="list-group-item list-group-item-action @(category == null ? "active" : "")">
                        <i class="bi bi-grid"></i> Tất cả sản phẩm
                        <span class="badge bg-secondary float-end">@ViewBag.TotalProducts</span>
                    </a>
                    @if (categories != null && categories.Any())
                    {
                        foreach (var cat in categories)
                        {
                            var productCount = cat.Products?.Count ?? 0;
                            <a href="@Url.Action("ProductList", "Home", new { categoryId = cat.CategoryID, minPrice = minPrice, maxPrice = maxPrice, searchTerm = searchTerm, sortOrder = sortOrder })" 
                               class="list-group-item list-group-item-action @(category?.CategoryID == cat.CategoryID ? "active" : "")">
                                <i class="bi bi-tag"></i> @cat.CategoryName
                                <span class="badge bg-secondary float-end">@productCount</span>
                            </a>
                        }
                    }
                </div>
            </div>

            <!-- Price Range Filter -->
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Khoảng giá</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, searchTerm = searchTerm, sortOrder = sortOrder })" 
                           class="list-group-item list-group-item-action @(minPrice == null && maxPrice == null ? "active" : "")">
                            <i class="bi bi-check-circle"></i> Tất cả
                        </a>
                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = 0, maxPrice = 100000, searchTerm = searchTerm, sortOrder = sortOrder })" 
                           class="list-group-item list-group-item-action @(minPrice == 0 && maxPrice == 100000 ? "active" : "")">
                            <i class="bi bi-cash"></i> Dưới 100,000₫
                        </a>
                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = 100000, maxPrice = 500000, searchTerm = searchTerm, sortOrder = sortOrder })" 
                           class="list-group-item list-group-item-action @(minPrice == 100000 && maxPrice == 500000 ? "active" : "")">
                            <i class="bi bi-cash"></i> 100,000₫ - 500,000₫
                        </a>
                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = 500000, maxPrice = 1000000, searchTerm = searchTerm, sortOrder = sortOrder })" 
                           class="list-group-item list-group-item-action @(minPrice == 500000 && maxPrice == 1000000 ? "active" : "")">
                            <i class="bi bi-cash"></i> 500,000₫ - 1,000,000₫
                        </a>
                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = 1000000, searchTerm = searchTerm, sortOrder = sortOrder })" 
                           class="list-group-item list-group-item-action @(minPrice == 1000000 && maxPrice == null ? "active" : "")">
                            <i class="bi bi-cash"></i> Trên 1,000,000₫
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Products Grid -->
        <div class="col-lg-9">
            <!-- Search & Sort Bar -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row g-3 align-items-center">
                        <div class="col-md-6">
                            @using (Html.BeginForm("ProductList", "Home", FormMethod.Get, new { @class = "d-flex gap-2" }))
                            {
                                if (category != null)
                                {
                                    <input type="hidden" name="categoryId" value="@category.CategoryID" />
                                }
                                if (minPrice.HasValue)
                                {
                                    <input type="hidden" name="minPrice" value="@minPrice.Value" />
                                }
                                if (maxPrice.HasValue)
                                {
                                    <input type="hidden" name="maxPrice" value="@maxPrice.Value" />
                                }
                                if (!string.IsNullOrEmpty(sortOrder))
                                {
                                    <input type="hidden" name="sortOrder" value="@sortOrder" />
                                }
                                <input type="text" name="searchTerm" value="@searchTerm" 
                                       class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-search"></i>
                                </button>
                            }
                        </div>
                        <div class="col-md-6">
                            <div class="d-flex align-items-center justify-content-end gap-2">
                                <span class="text-muted">Sắp xếp:</span>
                                <div class="btn-group">
                                    <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = minPrice, maxPrice = maxPrice, searchTerm = searchTerm, sortOrder = "name_asc" })" 
                                       class="btn btn-outline-secondary btn-sm @(sortOrder == "name_asc" ? "active" : "")">
                                        <i class="bi bi-sort-alpha-down"></i> Tên A-Z
                                    </a>
                                    <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = minPrice, maxPrice = maxPrice, searchTerm = searchTerm, sortOrder = "price_asc" })" 
                                       class="btn btn-outline-secondary btn-sm @(sortOrder == "price_asc" ? "active" : "")">
                                        <i class="bi bi-sort-numeric-down"></i> Giá thấp
                                    </a>
                                    <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = minPrice, maxPrice = maxPrice, searchTerm = searchTerm, sortOrder = "price_desc" })" 
                                       class="btn btn-outline-secondary btn-sm @(sortOrder == "price_desc" ? "active" : "")">
                                        <i class="bi bi-sort-numeric-up"></i> Giá cao
                                    </a>
                                    <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = minPrice, maxPrice = maxPrice, searchTerm = searchTerm, sortOrder = "newest" })" 
                                       class="btn btn-outline-secondary btn-sm @(sortOrder == "newest" ? "active" : "")">
                                        <i class="bi bi-star"></i> Mới nhất
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Active Filters Display -->
                    @if (minPrice.HasValue || maxPrice.HasValue || !string.IsNullOrEmpty(searchTerm))
                    {
                        <div class="mt-3 pt-3 border-top">
                            <div class="d-flex flex-wrap gap-2 align-items-center">
                                <span class="text-muted"><i class="bi bi-funnel-fill"></i> Bộ lọc đang áp dụng:</span>
                                
                                @if (minPrice.HasValue || maxPrice.HasValue)
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-cash"></i>
                                        @if (minPrice.HasValue && !maxPrice.HasValue)
                                        {
                                            <text>Từ @String.Format("{0:N0}₫", minPrice)</text>
                                        }
                                        else if (!minPrice.HasValue && maxPrice.HasValue)
                                        {
                                            <text>Đến @String.Format("{0:N0}₫", maxPrice)</text>
                                        }
                                        else if (minPrice.HasValue && maxPrice.HasValue)
                                        {
                                            <text>@String.Format("{0:N0}₫", minPrice) - @String.Format("{0:N0}₫", maxPrice)</text>
                                        }
                                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, searchTerm = searchTerm, sortOrder = sortOrder })" 
                                           class="text-white ms-1" style="text-decoration: none;">✕</a>
                                    </span>
                                }
                                
                                @if (!string.IsNullOrEmpty(searchTerm))
                                {
                                    <span class="badge bg-info">
                                        <i class="bi bi-search"></i> "@searchTerm"
                                        <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID, minPrice = minPrice, maxPrice = maxPrice, sortOrder = sortOrder })" 
                                           class="text-white ms-1" style="text-decoration: none;">✕</a>
                                    </span>
                                }
                                
                                <a href="@Url.Action("ProductList", "Home", new { categoryId = category?.CategoryID })" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-x-circle"></i> Xóa tất cả
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Products Grid -->
            @if (Model != null && Model.Any())
            {
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-4">
                    @foreach (var product in Model)
                    {
                        string imgPath;
                        if (string.IsNullOrEmpty(product.ProductImage))
                        {
                            imgPath = Url.Content("~/Images/no-image.png");
                        }
                        else if (product.ProductImage.StartsWith("http://") || product.ProductImage.StartsWith("https://"))
                        {
                            imgPath = product.ProductImage;
                        }
                        else if (product.ProductImage.StartsWith("~") || product.ProductImage.StartsWith("/"))
                        {
                            imgPath = Url.Content(product.ProductImage);
                        }
                        else
                        {
                            imgPath = Url.Content("~/Images/" + product.ProductImage);
                        }

                        <div class="col">
                            <div class="card h-100 border shadow-sm product-card">
                                <div class="position-relative">
                                    <img class="card-img-top" src="@imgPath" alt="@product.ProductName" 
                                         style="height: 250px; object-fit: cover;" />
                                    @if (product.Category != null)
                                    {
                                        <span class="badge bg-primary position-absolute top-0 start-0 m-2">
                                            @product.Category.CategoryName
                                        </span>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h6 class="card-title mb-2" style="height: 3rem; overflow: hidden; line-height: 1.5rem;">
                                        @product.ProductName
                                    </h6>
                                    @if (!string.IsNullOrEmpty(product.ProductDescription))
                                    {
                                        <p class="card-text text-muted small mb-2" style="height: 2.5rem; overflow: hidden;">
                                            @(product.ProductDescription.Length > 60 ? product.ProductDescription.Substring(0, 60) + "..." : product.ProductDescription)
                                        </p>
                                    }
                                    <div class="mt-auto">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="text-danger fw-bold fs-5">
                                                @String.Format("{0:N0} ₫", product.ProductPrice)
                                            </span>
                                        </div>
                                        <div class="d-grid gap-2">
                                            <a href="@Url.Action("ProductDetail", "Home", new { id = product.ProductID })" 
                                               class="btn btn-primary btn-sm">
                                                <i class="bi bi-eye"></i> Xem chi tiết
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">Không tìm thấy sản phẩm nào</h4>
                    <p class="text-muted">Vui lòng thử lại với bộ lọc khác hoặc xem tất cả sản phẩm.</p>
                    <a href="@Url.Action("ProductList", "Home")" class="btn btn-primary">
                        <i class="bi bi-arrow-left"></i> Xem tất cả sản phẩm
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .product-card {
        transition: all 0.3s ease;
    }

    .product-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.15) !important;
    }

    .list-group-item.active {
        background-color: #0d6efd;
        border-color: #0d6efd;
    }

    .breadcrumb {
        margin-bottom: 0;
    }

    .card-header h5 {
        margin: 0;
    }

    .btn-group .btn {
        font-size: 0.85rem;
    }

    .btn-group .btn.active {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

    @@media (max-width: 768px) {
        .btn-group {
            flex-direction: column;
            width: 100%;
        }
        
        .btn-group .btn {
            width: 100%;
            margin-bottom: 0.25rem;
        }
    }
</style>


@model _22DH114699_LTW.Models.Order

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-receipt"></i> Chi Tiết Đơn Hàng</h2>
                <a href="@Url.Action("MyOrder", "Order")" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay Lại
                </a>
            </div>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <!-- Order information -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Thông Tin Đơn Hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Mã đơn hàng:</strong></td>
                                    <td><span class="text-primary">#@Model.OrderID</span></td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày đặt hàng:</strong></td>
                                    <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Trạng thái:</strong></td>
                                    <td><span class="badge bg-warning">Đang xử lý</span></td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Khách hàng:</strong></td>
                                    <td>@Model.Customer.CustomerName</td>
                                </tr>
                                <tr>
                                    <td><strong>Số điện thoại:</strong></td>
                                    <td>@Model.Customer.CustomerPhone</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@Model.Customer.CustomerEmail</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Delivery information -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-truck"></i> Thông Tin Giao Hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Địa chỉ giao hàng:</strong></p>
                            <p class="text-muted">@Model.AddressDelivery</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Phương thức thanh toán:</strong></p>
                            <p class="text-muted">@Model.PaymentStatus</p>
                            <p><strong>Phí vận chuyển:</strong></p>
                            <p class="text-success fw-bold">Miễn phí</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order items -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-box-seam"></i> Sản Phẩm Đã Đặt</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>STT</th>
                                    <th>Sản phẩm</th>
                                    <th>Hình ảnh</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int stt = 1;
                                }
                                @foreach (var item in Model.OrderDetails)
                                {
                                    <tr>
                                        <td>@stt</td>
                                        <td>
                                            <div class="fw-bold">@item.Product.ProductName</div>
                                            <small class="text-muted">@item.Product.Category.CategoryName</small>
                                        </td>
                                        <td>
                                            @{
                                                string imgPath;
                                                if (string.IsNullOrEmpty(item.Product.ProductImage))
                                                {
                                                    imgPath = Url.Content("~/Images/no-image.png");
                                                }
                                                else if (item.Product.ProductImage.StartsWith("http://") || item.Product.ProductImage.StartsWith("https://"))
                                                {
                                                    imgPath = item.Product.ProductImage;
                                                }
                                                else if (item.Product.ProductImage.StartsWith("~") || item.Product.ProductImage.StartsWith("/"))
                                                {
                                                    imgPath = Url.Content(item.Product.ProductImage);
                                                }
                                                else
                                                {
                                                    imgPath = Url.Content("~/Images/" + item.Product.ProductImage);
                                                }
                                            }
                                            <img src="@imgPath" alt="@item.Product.ProductName" style="width: 60px; height: 60px; object-fit: cover;" class="rounded" />
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@String.Format("{0:N0}", item.UnitPrice) đ</td>
                                        <td class="text-end fw-bold">@String.Format("{0:N0}", item.UnitPrice * item.Quantity) đ</td>
                                    </tr>
                                    stt++;
                                }
                            </tbody>
                            <tfoot class="table-light">
                                <tr>
                                    <td colspan="5" class="text-end"><strong>Tạm tính:</strong></td>
                                    <td class="text-end fw-bold">@String.Format("{0:N0}", Model.TotalAmount) đ</td>
                                </tr>
                                <tr>
                                    <td colspan="5" class="text-end"><strong>Phí vận chuyển:</strong></td>
                                    <td class="text-end fw-bold text-success">Miễn phí</td>
                                </tr>
                                <tr class="table-primary">
                                    <td colspan="5" class="text-end"><strong class="fs-5">Tổng cộng:</strong></td>
                                    <td class="text-end"><strong class="text-danger fs-4">@String.Format("{0:N0}", Model.TotalAmount) đ</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Additional notes -->
            <div class="card">
                <div class="card-body bg-light">
                    <h6 class="mb-3"><i class="bi bi-info-circle"></i> Lưu Ý</h6>
                    <ul class="mb-0">
                        <li>Nếu có bất kỳ thắc mắc nào về đơn hàng, vui lòng liên hệ với chúng tôi qua hotline: <strong>1900-xxxx</strong></li>
                        <li>Đơn hàng sẽ được giao trong vòng 2-5 ngày làm việc.</li>
                        <li>Quý khách vui lòng kiểm tra kỹ sản phẩm trước khi thanh toán.</li>
                    </ul>
                </div>
            </div>

            <!-- Action buttons -->
            <div class="text-center mt-4">
                <a href="@Url.Action("MyOrder", "Order")" class="btn btn-primary btn-lg">
                    <i class="bi bi-list-ul"></i> Xem Tất Cả Đơn Hàng
                </a>
                <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-house"></i> Về Trang Chủ
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .table td {
            vertical-align: middle;
        }
    </style>
}
